{{#each result}}

   
   <div class="card" style="width: 18rem;">
     {{#if this.image.url}}
  <div class="card-head"><img src="{{this.image.url}}" style="width: 60px; height:70px" alt=""></div>
  {{/if}}
    <div class="card-body">
    <h5 class="card-title">{{this.name}} {{this.lastname}}</h5>
    <p class="card-text">Опыт:{{this.experience}}</p>
    <a href="#" class="btn btn-primary">Записаться</a>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target='#{{this.name}}'>
  Read more about Mentor
</button>
    </div>
    
{{/each}}
