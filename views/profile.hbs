<div class="container">
  {{#if user}}
  <ul class="nav nav-pills nav-justified">
  
  <li class="nav-item">
    <a class="nav-link" aria-current="page" href="/{{user.username}}">Мой профиль</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/{{user.username}}/requests">Мои заявки</a>
  </li>
  
</ul>
</div>
<div class="container d-flex justify-content-center flex-wrap mt-3">
  
  
  <div class="card mb-3" style="height:400px">
    <div class="row g-0">
      <div class="col-md-4 bg-light text-white">
        <img src="{{user.image.url}}" alt="Your profile picture here">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{user.name}} {{user.lastname}}</h5>
          <p class="card-text">О себе: {{user.aboutMe}}</p>
          <p class="card-text">Тэги:</p>
          {{#each user.tags}}
          <p class="card-text">{{this.tag}}</p>
          {{/each}}
          <p class="card-text"><small class="text-muted">Last updated {{user.updatedAt}}</small></p>
        </div>
         <a href="/{{user._id}}/edit" class="btn btn-primary m-3">Редактировать</a>
      </div>
     
    </div>
  </div>
  
</div>
{{/if}}

{{#if requests}}
<div class="accordion m-auto mt-3" style="width:60%" id="accordionExample">
{{#each requests}}
  <div class="accordion-item" id="c{{this.id}}">
      <h2 class="accordion-header" id="headingOne{{this.name}}">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" aria-expanded="true" data-bs-target="#collapseOne{{this.id}}"  aria-controls="collapseOne{{this.id}}">
          Заявка от {{this.name}}
        </button>
      </h2>
      <div id="collapseOne{{this.id}}" class="accordion-collapse collapse" aria-labelledby="headingOne{{this.id}}" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <ul>
<li>Привет, меня зовут {{this.name}}, {{this.lastname}}</li>
<li>Мои контакты {{this.contact}}</li>
<li>{{this.about}}</li>
          </ul>
          <div>
            <a role="button" class="btn btn-secondary" href="/{{../username}}/requests/{{this.id}}">Удалить Заявку</a>
          </div>
        </div>
      </div>
    </div>
  
{{/each}}
{{/if}}
</div>

