{{#if user}}
<div class="card" style="width: 30rem;">
  <img src="{{user.image.path}}" class="card-img-left" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{user.name}} {{user.lastname}}</h5>
    <p class="card-text">О себе: {{user.aboutMe}}</p>
    <p class="card-text">Тэги:</p>
    {{#each user.tags}}
      <p class="card-text">{{this.tag}}</p>
    {{/each}}
    <a href="/{{user._id}}/edit" class="btn btn-primary">Редактировать</a>
  </div>
</div>
{{/if}}
